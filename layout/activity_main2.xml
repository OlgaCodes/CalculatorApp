<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity2" >

    <EditText
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/black"
        android:textColor="@color/white"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="ACEvent"
                android:text="@string/AC"
                android:textColor="@color/white"
                app:backgroundTint="@color/lightGrey" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="CEvent"
                android:text="@string/C"
                app:backgroundTint="@color/lightGrey" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="@string/znak"
                app:backgroundTint="@color/lightGrey" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="operatorEvent"
                android:text="@string/dividing"
                app:backgroundTint="@color/orange" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="@string/seven"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/eight" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/nine" />

            <Button
                android:id="@+id/Multiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"

                android:onClick="operatorEvent"
                android:text="@string/multiply"
                app:backgroundTint="@color/orange" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/four" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/five" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/six" />

            <Button
                android:id="@+id/Minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="operatorEvent"
                android:text="@string/minus"
                app:backgroundTint="@color/orange" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/one" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/two" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                app:backgroundTint="@color/darkGrey"
                android:text="@string/three" />

            <Button
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:onClick="operatorEvent"
                android:text="@string/plus"
                app:backgroundTint="@color/orange" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight=".5"
                android:onClick="numberEvent"
                android:text="@string/zero"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/comma"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight=".25"
                android:onClick="putDot"
                android:text="@string/comma"
                app:backgroundTint="@color/darkGrey" />


            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight=".25"
                android:onClick="equal"
                android:text="@string/equals"
                app:backgroundTint="@color/orange" />

        </TableRow>
    </TableLayout>
</LinearLayout>